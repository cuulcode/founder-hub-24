{
  "manifest_version": 3,
  "name": "Project Hub - Multi-Company Manager",
  "short_name": "Project Hub",
  "version": "1.0.0",
  "description": "Manage multiple companies with habit tracking, tasks, Kanban boards, and notes",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Open Project Hub",
    "default_popup": "sidepanel.html"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "permissions": [
    "storage",
    "sidePanel",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "fullpage.html", "sidepanel.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
